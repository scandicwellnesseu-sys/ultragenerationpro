# ===========================================
# UltragenerationPro - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ultragenerationpro?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
SESSION_SECRET="your-session-secret-change-in-production"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (from Stripe Dashboard â†’ Products)
STRIPE_STARTER_PRICE_ID="price_xxx"
STRIPE_PRO_PRICE_ID="price_xxx"
STRIPE_ENTERPRISE_PRICE_ID="price_xxx"

# SendGrid Email
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourapp.com"

# Google Gemini AI (for product descriptions)
GEMINI_API_KEY="your-gemini-api-key"
VITE_GEMINI_API_KEY="your-gemini-api-key"

# AI Image Generation
# OpenAI DALL-E 3 (recommended for quality)
VITE_OPENAI_API_KEY="sk-your-openai-api-key"

# Flux (via Replicate - fastest, trending)
# Uses same key as Replicate below

# Ideogram 2.0 (best for text in images)
VITE_IDEOGRAM_API_KEY="your-ideogram-api-key"

# Stability AI (Stable Diffusion XL)
VITE_STABILITY_API_KEY="sk-your-stability-api-key"

# Replicate (multiple models including Flux)
VITE_REPLICATE_API_KEY="r8_your-replicate-api-key"

# E-commerce Integrations
# Shopify
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""

# WooCommerce (per-store, stored in database)
# WOOCOMMERCE_CONSUMER_KEY=""
# WOOCOMMERCE_CONSUMER_SECRET=""

# Magento
MAGENTO_ACCESS_TOKEN=""

# Application
NODE_ENV="development"
VITE_API_URL="http://localhost:3001/api"

# Feature Flags
ENABLE_MOCK_EMAIL="true"
ENABLE_DEMO_MODE="false"
