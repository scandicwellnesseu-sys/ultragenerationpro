// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  hashedPassword String?
  name           String?
  role           Role          @default(USER)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  apiKeys        ApiKey[]
  activityLogs   ActivityLog[]
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model Organization {
  id           String              @id @default(cuid())
  name         String
  brandVoice   String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  users        User[]
  subscription Subscription?
  history      GenerationHistory[]
  products     Product[]
  integrations Integration[]
  activityLogs ActivityLog[]
}

model Subscription {
  id                   String       @id @default(cuid())
  organizationId       String       @unique
  organization         Organization @relation(fields: [organizationId], references: [id])
  stripeCustomerId     String?      @unique
  stripeSubscriptionId String?      @unique
  plan                 String       @default("free") // e.g., "free", "starter", "pro"
  status               String       @default("active") // e.g., "active", "past_due", "canceled"
  creditsBalance       Int          @default(10)
  expiresAt            DateTime?
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

model GenerationHistory {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id])
  productTitle    String
  keywords        String
  language        String
  tone            String
  audience        String
  headline        String
  body            String       @db.Text
  metaDescription String
  featureBullets  String[]
  seoKeywords     String[]
  createdAt       DateTime     @default(now())
}

model Product {
  id               String            @id @default(cuid())
  organizationId   String
  organization     Organization      @relation(fields: [organizationId], references: [id])
  externalId       String? // ID from external platform (Shopify, WooCommerce, etc.)
  name             String
  description      String?           @db.Text
  currentPrice     Float
  suggestedPrice   Float?
  costPrice        Float?
  category         String?
  sku              String?
  imageUrl         String?
  source           String            @default("manual") // manual, shopify, woocommerce, etc.
  status           ProductStatus     @default(PENDING)
  autoApprove      Boolean           @default(false)
  lastPriceUpdate  DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  priceSuggestions PriceSuggestion[]

  @@unique([organizationId, externalId, source])
}

enum ProductStatus {
  PENDING
  APPROVED
  REJECTED
  SYNCING
}

model PriceSuggestion {
  id             String    @id @default(cuid())
  productId      String
  product        Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  currentPrice   Float
  suggestedPrice Float
  confidence     Float     @default(0.8)
  reasoning      String?   @db.Text
  applied        Boolean   @default(false)
  appliedAt      DateTime?
  createdAt      DateTime  @default(now())
}

model Integration {
  id             String            @id @default(cuid())
  organizationId String
  organization   Organization      @relation(fields: [organizationId], references: [id])
  platform       String // shopify, woocommerce, magento, wix, squarespace
  status         IntegrationStatus @default(DISCONNECTED)
  credentials    Json? // Encrypted API keys, tokens, etc.
  shopUrl        String?
  lastSyncAt     DateTime?
  syncError      String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@unique([organizationId, platform])
}

enum IntegrationStatus {
  CONNECTED
  DISCONNECTED
  ERROR
  SYNCING
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  key         String    @unique
  hashedKey   String // Store hashed version for security
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  permissions String[]  @default(["read"])
  createdAt   DateTime  @default(now())
}

model ActivityLog {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  userId         String?
  user           User?        @relation(fields: [userId], references: [id])
  action         String // e.g., "price_change", "login", "product_import", "integration_connect"
  entityType     String? // e.g., "product", "user", "integration"
  entityId       String?
  details        Json? // Additional details about the action
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime     @default(now())

  @@index([organizationId, createdAt])
  @@index([userId, createdAt])
  @@index([action])
}
